<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
  
  
<mapper namespace="pers.student.admin.dao.SecurityUserToRoleMapper">

<!--为用户添加角色 -->
<insert id="insert" parameterType="pers.student.admin.po.SecurityUserToRole">
    <!-- 主键值返回 -->
    <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
        SELECT LAST_INSERT_ID()
    </selectKey>
	insert into ps_security_user_to_role (role_id,user_id) values (#{roleId} ,#{userId})
</insert>

<!-- 更新用户角色 -->
<update id="updateByPrimaryKeySelective" parameterType="pers.student.admin.po.SecurityUserToRole">
	update ps_security_user_to_role 
	
	<set>
	    <if test="roleId !=null and roleId !=''">
	        role_id=#{roleId}
	    </if>
	    
	</set>
	 
	 where user_id=#{userId}

</update>

</mapper>